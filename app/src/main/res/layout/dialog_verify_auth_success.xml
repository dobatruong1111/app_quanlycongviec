<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:background="@drawable/bg_box_verify">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Success"
            android:gravity="center"
            android:textSize="28dp"
            android:layout_marginTop="80dp"
            android:textStyle="bold"
            android:textColor="@color/black"

            android:fontFamily="@font/cunia"
            />

        <TextView
            android:id="@+id/tv_description_verify_success"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:text="Check your email for authentication\nClick OK to Sign In!"
            android:lineSpacingExtra="15dp"
            android:fontFamily="@font/ailerson_light"
            android:gravity="center"
            android:textSize="17dp"
            android:layout_marginTop="20dp"
            />

        <Button
            android:id="@+id/verify_success_ok"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:text="OK"
            android:fontFamily="@font/cunia"
            android:textSize="20dp"
            android:includeFontPadding="false"
            android:background="@drawable/bg_btn_confirm_verify"

            android:layout_marginTop="20dp"
            >
        </Button>

    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:src="@drawable/ic_task_success"
        android:background="@null"
        app:tint="#66BB6A" />

</RelativeLayout>