<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/email_or_phone_number_verify"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Email or Phone Number"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textSize="18dp"
        android:textStyle="bold"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/ailerson_black"
        />

    <TextView
        android:id="@+id/tv_description_verify"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:lineSpacingExtra="10dp"
        android:text="Please confirm this email address is correct! \n We will send you an email with a confirmation URL link."
        android:textSize="15dp"
        android:fontFamily="@font/ailerson_light"
        android:gravity="center"
        android:layout_below="@+id/email_or_phone_number_verify"
        android:layout_marginTop="20dp"
        />
    <LinearLayout
        android:id="@+id/box_btn_verify"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/tv_description_verify"
        android:layout_marginTop="25dp"
        android:weightSum="2"
        >

        <Button
            android:id="@+id/btn_cancel_verify"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="Cancel"
            android:textSize="16dp"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:gravity="center"
            android:background="@drawable/bg_btn_cancel_verify"

            />

        <Button
            android:id="@+id/btn_confirm_verify"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="Confirm"
            android:textSize="16dp"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:gravity="center"
            android:background="@drawable/bg_btn_confirm_verify"
            />

    </LinearLayout>

</RelativeLayout>