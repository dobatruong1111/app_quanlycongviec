<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp"

    tools:context=".Activity.phoneAuthVerifySceen">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/btn_verify_back_to_sign_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:backgroundTint="@color/white"
            android:src="@drawable/ic_back_activity"
            android:tint="@color/black" />

        <TextView
            android:id="@+id/tv_otp_verify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignBottom="@+id/btn_verify_back_to_sign_up"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/cunia"
            android:text="OTP Verification"
            android:textColor="@color/black"

            android:textSize="28dp" />

        <ImageView
            android:id="@+id/icon_recieved"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_otp_verify"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:src="@drawable/ic_baseline_beenhere_24"
            app:tint="@color/black" />

        <TextView
            android:id="@+id/tv_desctiption_otp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_below="@+id/icon_recieved"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/ailerson_light"
            android:gravity="center"

            android:text="Enter the OTP send to"
            android:textColor="@color/black"
            android:textSize="17dp" />

        <LinearLayout
            android:id="@+id/box_code_otp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_desctiption_otp"
            android:layout_marginTop="50dp"
            android:gravity="center">

            <EditText
                android:id="@+id/otp_1"
                android:layout_width="40dp"
                android:layout_height="45dp"
                android:gravity="center"
                android:imeOptions="actionNext"
                android:importantForAutofill="no"
                android:inputType="number"
                android:maxLength="1"
                android:textColor="#212121"
                android:textSize="24dp"
                android:textStyle="bold"
                tools:ignore="Label For" />

            <EditText
                android:id="@+id/otp_2"
                android:layout_width="40dp"
                android:layout_height="45dp"
                android:layout_marginStart="4dp"
                android:gravity="center"
                android:imeOptions="actionNext"
                android:importantForAutofill="no"
                android:inputType="number"
                android:maxLength="1"
                android:textColor="#212121"
                android:textSize="24dp"
                android:textStyle="bold"
                tools:ignore="Label For" />

            <EditText
                android:id="@+id/otp_3"
                android:layout_width="40dp"
                android:layout_height="45dp"
                android:layout_marginStart="4dp"
                android:gravity="center"
                android:imeOptions="actionNext"
                android:importantForAutofill="no"
                android:inputType="number"
                android:maxLength="1"
                android:textColor="#212121"
                android:textSize="24dp"
                android:textStyle="bold"
                tools:ignore="Label For" />

            <EditText
                android:id="@+id/otp_4"
                android:layout_width="40dp"
                android:layout_height="45dp"
                android:layout_marginStart="4dp"
                android:gravity="center"
                android:imeOptions="actionNext"
                android:importantForAutofill="no"
                android:inputType="number"
                android:maxLength="1"
                android:textColor="#212121"
                android:textSize="24dp"
                android:textStyle="bold"
                tools:ignore="Label For" />

            <EditText
                android:id="@+id/otp_5"
                android:layout_width="40dp"
                android:layout_height="45dp"
                android:layout_marginStart="4dp"
                android:gravity="center"
                android:imeOptions="actionNext"
                android:importantForAutofill="no"
                android:inputType="number"
                android:maxLength="1"
                android:textColor="#212121"
                android:textSize="24dp"
                android:textStyle="bold"
                tools:ignore="Label For" />

            <EditText
                android:id="@+id/otp_6"
                android:layout_width="40dp"
                android:layout_height="45dp"
                android:layout_marginStart="4dp"
                android:gravity="center"
                android:imeOptions="actionNext"
                android:importantForAutofill="no"
                android:inputType="number"
                android:maxLength="1"
                android:textColor="#212121"
                android:textSize="24dp"
                android:textStyle="bold"
                tools:ignore="Label For" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/tv_do_not_receive_otp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_below="@+id/box_code_otp"
            android:layout_marginTop="40dp"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:fontFamily="@font/ailerson_light"
                android:text="Didn't receive the OTP!"
                android:textColor="@color/black"
                android:textSize="17dp" />

            <Button
                android:id="@+id/btn_resend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginStart="8dp"
                android:fontFamily="@font/cunia"
                android:text="Resend OTP"
                android:textColor="@color/black"
                android:textSize="17dp"
                android:background="@null"
                android:backgroundTint="@color/white"/>

        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_do_not_receive_otp"
            android:foregroundGravity="">


            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_verify_phone"
                android:layout_width="match_parent"
                android:layout_height="60dp"


                android:layout_marginTop="60dp"
                android:backgroundTint="#1E1E1E"
                android:elevation="10dp"

                android:fontFamily="@font/cunia"
                android:includeFontPadding="false"
                android:text="Verify"
                android:textColor="@color/white"

                android:textSize="20dp"
                android:translationZ="15dp"

                app:cornerRadius="10dp"
                android:clickable="true"
                ></com.google.android.material.button.MaterialButton>

                <ProgressBar
                    android:id="@+id/progress_verify"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="64dp"
                    android:visibility="gone"
                    android:indeterminate="true"
                    android:indeterminateTintMode="src_atop"
                    android:indeterminateTint="#567BEB"
                    style="?android:attr/progressBarStyleLarge"/>


        </FrameLayout>

    </RelativeLayout>

</ScrollView>